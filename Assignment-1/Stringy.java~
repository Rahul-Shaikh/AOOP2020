import java.util.Scanner;

class Stringy {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter a String: ");
		String str1 = sc.nextLine();
		System.out.println(str1 + "\n\nAssinging the reference\n");
		
		String str2 = str1;
		System.out.println("\nFor == the result is " + (str1 == str2) + "\n"); 
		System.out.println("\nFor equals method the result is " + (str1.equals(str2)) + "\n");
		
		System.out.println("\nCreating new object with the same value\n");
		String str3 = new String(str1);
		System.out.println("\nFor == the result is " + (str1 == str3) + "\n"); 
		System.out.println("\nFor equals method the result is " + (str1.equals(str3)) + "\n");
		 
	}
}
